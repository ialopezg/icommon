{
  "name": "@ialopezg/commonjs",
  "version": "1.1.5",
  "description": "JavaScript Library Starter Kit for modern apps and libraries.",
  "main": "lib/index.js",
  "module": "lib/index.js",
  "private": false,
  "scripts": {
    "prebuild": "rimraf lib",
    "build": "tsc -p tsconfig.prod.json",
    "lint": "eslint $PWD/'src/**/*.js'",
    "lint:fix": "prettier-eslint $PWD/'src/**/*.js' --write",
    "test": "nyc --require ts-node/register mocha src/**/*.spec.ts --reporter spec",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "release": "standard-version",
    "release:major": "standard-version --release-as major",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "prepare": "husky install",
    "prepublish": "npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ialopezg/CommonJS.git"
  },
  "keywords": [
    "javascript",
    "library",
    "starter",
    "kit"
  ],
  "author": "Isidroa A. Lopez G. <me@ialopezg.com> (https://ialopezg.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ialopezg/CommonJS/issues"
  },
  "homepage": "https://github.com/ialopezg/CommonJS",
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.14.1",
    "@types/sinon": "^10.0.13",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "chai": "^4.3.7",
    "coveralls": "^3.1.1",
    "eslint": "^8.34.0",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.20",
    "nyc": "^15.1.0",
    "prettier": "^2.8.4",
    "rimraf": "^4.1.2",
    "sinon": "^15.0.1",
    "sinon-chai": "^3.7.0",
    "standard-version": "^9.5.0",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "files": [
    "lib",
    "CHANGELOG.md",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=4"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules/"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
